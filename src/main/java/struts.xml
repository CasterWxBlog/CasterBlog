<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE struts PUBLIC
    "-//Apache Software Foundation//DTD Struts Configuration 2.0//EN"
    "http://struts.apache.org/dtds/struts-2.0.dtd">

<struts>
	
  <package name="BootBlog" extends="struts-default">
	  <action name="home" class="blog.action.IndexAction">
		  <result name="success">/jsp/home.jsp</result>
	  </action>
	  <action name="about" class="blog.action.IndexAction">
		  <result name="success">/jsp/about.jsp</result>
	  </action>
	  <action name="article" class="blog.action.IndexAction">
		  <result name="success">/jsp/article.jsp</result>
	  </action>
	  <action name="/list/detail_*" class="blog.action.BlogListAction">
		  <result name="success">/jsp/detail.jsp</result>
	  </action>
	  <action name="resource" class="blog.action.IndexAction">
		  <result name="success">/jsp/resource.jsp</result>
	  </action>
	  <action name="timeline" class="blog.action.IndexAction">
		  <result name="success">/jsp/timeline.jsp</result>
	  </action>
	  <action name="addcontent" class="blog.action.IndexAction">
		  <result name="addContent">/jsp/addContent.jsp</result>
	  </action>
  </package>

</struts>